/* components/song-list/song-list.wxss */
.song-list {
  white-space: nowrap;
  width: 100vm;
  box-sizing: border-box;
}

.song-list-item {
  display: inline-block;
  vertical-align: top;
  width: 220rpx;
  margin-left: 16rpx;
}

.song-list-item:first-of-type {
  margin-left: 0rpx;
}

.song-list-item:last-of-type {
  margin-right: 0rpx;
}
